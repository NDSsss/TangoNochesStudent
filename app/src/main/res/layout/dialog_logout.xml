<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/base_margin"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_logout_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_half"
        android:gravity="center"
        android:text="@string/dialog_logout_title"
        app:layout_constraintEnd_toEndOf="@id/dialog_logout_confirm_btn"
        app:layout_constraintStart_toStartOf="@id/dialog_logout_decline_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_logout_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_half"
        android:text="@string/dialog_logout_decline"
        app:layout_constraintEnd_toStartOf="@id/dialog_logout_confirm_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_logout_title_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_logout_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_half"
        android:text="@string/dialog_logout_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_logout_decline_btn"
        app:layout_constraintTop_toBottomOf="@id/dialog_logout_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>