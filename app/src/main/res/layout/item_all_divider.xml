<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base_margin_half"
    android:layout_marginTop="@dimen/margin_divider_top"
    android:layout_marginEnd="@dimen/base_margin_half"
    android:layout_marginBottom="@dimen/margin_divider_bot"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_all_divider_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="🎅Праздничная пижама-пати милонга" />

</androidx.constraintlayout.widget.ConstraintLayout>