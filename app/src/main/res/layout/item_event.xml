<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="227dp"
    android:layout_marginEnd="@dimen/base_margin_half"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_event_bg_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_event_photo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_event_bg_gradient_bottom"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/bg_event_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_event_bg_gradient_top"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:layout_constraintBottom_toTopOf="@id/item_event_bg_gradient_bottom"
            app:srcCompat="@drawable/bg_event_top" />


        <TextView
            android:id="@+id/item_event_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="@dimen/base_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="27 Декабря 20:00 - 03:00" />

        <TextView
            android:id="@+id/item_event_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_marginEnd="@dimen/base_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_event_tv_date"
            tools:text="Урок от Юли и Антона «Шаг в танго»" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_event_ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_event_tv_name"
            app:srcCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/item_event_tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_event_ic_location"
            app:layout_constraintTop_toBottomOf="@id/item_event_tv_name"
            tools:text="пр. Кирова 32/1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>