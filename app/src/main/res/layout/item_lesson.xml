<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_marginStart="@dimen/base_margin_half"
    android:layout_marginEnd="@dimen/base_margin_half"
    android:background="@drawable/bg_lesson"
    android:layout_height="137dp">

    <TextView
        android:layout_marginStart="@dimen/base_margin"
        android:layout_marginTop="@dimen/base_margin"
        tools:text="Суббота 28.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/item_lesson_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="@dimen/base_margin"
        android:layout_marginTop="@dimen/base_margin"
        tools:text="20:00 - 04:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_lesson_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="@dimen/base_margin"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_lesson_tv_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="end"
        android:lines="2"
        tools:text="🎅Праздничная пижама-пати милонга"
        android:id="@+id/item_lesson_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:id="@+id/item_lesson_ic_location"
        app:layout_constraintTop_toBottomOf="@id/item_lesson_tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="пр. Кирова 32/1"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/item_lesson_tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_lesson_ic_location"
        android:id="@+id/item_lesson_tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>